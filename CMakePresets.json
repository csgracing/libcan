{
    "version": 3,
    "configurePresets": [
        {
            "name": "pico",
            "binaryDir": "build/${presetName}",
            "installDir": "build/${presetName}",
            "cacheVariables": {
                "CAN_TARGET": "pico"
            },
            "architecture": {
                "value": "arm",
                "strategy": "external"
            }
        },
        {
            "name": "pico-host",
            "inherits": "pico",
            "cacheVariables": {
                "PICO_PLATFORM": "host"
            },
            "architecture": {
                "value": "x64",
                "strategy": "external"
            }
        },
        {
            "name": "pico-test",
            "inherits": "pico-host",
            "cacheVariables": {
                "IS_TEST_ENV": "true"
            }
        },
        {
            "name": "linux",
            "cacheVariables": {
                "CAN_TARGET": "linux"
            },
            "architecture": {
                "value": "x64",
                "strategy": "external"
            }
        },
        {
            "name": "linux-test",
            "inherits": "linux",
            "cacheVariables": {
                "IS_TEST_ENV": "true"
            }
        },
        {
            "name": "core",
            "cacheVariables": {
                "CAN_TARGET": "core"
            },
            "architecture": {
                "value": "x64",
                "strategy": "external"
            }
        },
        {
            "name": "core-test",
            "inherits": "core",
            "cacheVariables": {
                "IS_TEST_ENV": "true"
            }
        },
        {
            "name": "core-fuzz-test",
            "inherits": "core",
            "cacheVariables": {
                "IS_TEST_FUZZ_ENV": "true"
            }
        }
    ]
}